<script>
  function rolarDado() {
    const n = Math.floor(Math.random() * 20) + 1;
    document.getElementById("resultado").innerText =
      "Resultado do D20: " + n;

    if (n === 20) {
      alert("üî• CR√çTICO ABSOLUTO! üî•");
    } else if (n >= 18) {
      alert("‚ö° RESULTADO √âPICO ‚ö°");
    }
  }
